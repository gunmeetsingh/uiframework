{
    "title": "GTP Session Management",
    "endpoint": "/api/gtp/session-mgmt",
    "permission": "gtp:session:manage",
    "dbPool": "GTP_PROXY",
    "tableName": "gtp_session_mgmt",
    "metadataConfig": {
        "deleteType": "soft",
        "updatedByField": "updated_by",
        "updatedAtField": "updated_at",
        "lastActionField": "last_action",
        "listFilter": "last_action != 'D' OR last_action IS NULL"
    },
    "fields": [
        {
            "name": "home_mccmnc",
            "label": "Home NW MCCMNC",
            "type": "text",
            "required": true,
            "primary": true
        },
        {
            "name": "range_name",
            "label": "IMSI Range Name",
            "type": "select",
            "lookup": {
                "dbPool": "GTP_PROXY",
                "query": "SELECT DISTINCT range_name as value, range_name as label FROM gtp_imsi_ranges ORDER BY range_name"
            },
            "required": true,
            "primary": true
        },
        {
            "name": "visit_mcc",
            "label": "Visited MCC",
            "type": "text",
            "required": true,
            "primary": true
        },
        {
            "name": "visit_mccmnc",
            "label": "Visited MCCMNC",
            "type": "text",
            "required": true,
            "primary": true
        },
        {
            "name": "apn",
            "label": "APN",
            "type": "text",
            "required": true,
            "primary": true
        },
        {
            "name": "sess_action",
            "label": "Session Handling",
            "type": "select",
            "options": [
                {
                    "label": "Allow Session",
                    "value": "1"
                },
                {
                    "label": "Drop Session",
                    "value": "0"
                }
            ],
            "required": true
        },
        {
            "name": "user_bypass",
            "label": "User Plane Handling",
            "type": "select",
            "options": [
                {
                    "label": "Bypass User Plane",
                    "value": "0"
                },
                {
                    "label": "Proxy User Plane",
                    "value": "1"
                }
            ],
            "required": true
        },
        {
            "name": "mapped_apn",
            "label": "Mapped APN",
            "type": "text"
        },
        {
            "name": "pgw_ips",
            "label": "Destination PGW(s)",
            "type": "text",
            "required": true
        }
    ]
}